# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
command=~/.config/i3blocks/$BLOCK_NAME
separator_block_width=14
interval=10
markup=pango

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
[cpu_usage]
align=right

# Memory usage
[memory]

[wifi]

[brightness]
interval=once
signal=1

[battery]

[volume]
interval=once
signal=2

[weather]
interval=300

# Weather. Date & Time
[clock]
interval=60
